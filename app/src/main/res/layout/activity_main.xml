<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/main_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/main_updatetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Update to"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/main_clearsky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="19sp" />
    <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FC65A3EA"
        app:cardCornerRadius="10dp"
        >

        <SearchView
            android:id="@+id/search"
            android:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:queryHint="Search Here..."></SearchView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:src="@drawable/humidity" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_feelslike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Feels like"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_min_temp"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Min Temp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/main_max_temp"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Max Temp"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="#FC65A3EA"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">




                    <ImageView
                        android:id="@+id/main_sunrise_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sunrise" />

                    <TextView
                        android:id="@+id/main_sunrise_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Sun Rise"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/main_sunrise_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="05:00"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_sunset_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sunset" />

                    <TextView
                        android:id="@+id/main_sunset_tv"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"

                        android:text="Sun Set"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/main_sunset_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="05:00"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="00dp"


                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_wind_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wind" />

                    <TextView
                        android:id="@+id/main_wind_tv"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"

                        android:text="Wind Speed"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/main_wind_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="05:00"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_pressure_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pressure" />

                    <TextView
                        android:id="@+id/main_pressure_tv"
                        android:layout_width="76dp"
                        android:layout_height="wrap_content"
                        android:text="Pressure"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/main_pressure_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="05:00"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_humidity_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/humidity" />

                    <TextView
                        android:id="@+id/main_humidity_tv"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"

                        android:text="Humidity"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/main_humidity_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="05:00"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="0dp"


                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_smoke_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/smoke" />

                    <TextView
                        android:id="@+id/main_smoke_tv"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"

                        android:text="Air Quality"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/main_smoke_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="05:00"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Five Days ForeCast"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/main_bottom_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_drop_down_circle_24" />
</LinearLayout>